---
import { Image } from 'astro:assets';
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import ACGenerator from "../assets/a.png";
import FluidPropulsion from "../assets/b.jpg";
import ElectricMotor from "../assets/c.jpg";

const projects = [
     {
          title: "analisis sistem akuntansi",
          description: "menganalisa sistem akuntansi seperti baraapp, menemukan bug, membuat fitur baru, kostumisasi",
          image: ACGenerator
     },
     {
          title: "menyusun lap keuangan",
          description: "belum, tapi ntar pasti bisa. easy belajarnya mah, kan ada aris yang mau ngajarin",
          image: FluidPropulsion
     },
     {
          title: "motoran jauh",
          description: "kemampuan daya tahan tubuh yang telah teruji dengan berbagai macam cuaca termasuk tornado.",
          image: ElectricMotor
     }];
---

<InfoLayout>
     <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh">
          <H1> Skill </H1>

          <ul class="mt-4 sm:mt-12 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-16 sm:gap-8">
               {projects.map((project) => (
                    <li>
                         <Image src={project.image} alt={project.title} class="aspect-[1/1.33] object-center object-cover rounded-lg shadow-lg mb-4 sm:mb-0 sm:mr-4" />
                         <div class="p-1 sm:p-2">
                              <h2 class="text-base text-zinc-100">{project.title}</h2>
                              <p class="text-sm text-zinc-400 text-balance">{project.description}</p>
                         </div>
                    </li>
               ))}
          </ul>
     </div>
</InfoLayout>
