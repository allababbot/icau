---
import clsx from "clsx/lite";

type Props = {
	className?: string;
	size?: "default" | "large";
}

const { size = "default", className } = Astro.props;
---

<h2
	class={clsx(
		"text-white font-bold text-balance",
		size === "default" && "text-3xl md:text-5xl xl:text-7xl tracking-tight",
		size === "large" && "text-6xl md:text-[72px] lg:text-[96px] tracking-tighter",
		className,
	)}
>
	<slot />
</h2>
